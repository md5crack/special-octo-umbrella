print(" welcome to my computer quiz")

playing = input("do you want to play?")


if playing.lower() != "yes":
    quit()
print("okay! let's play")
score = 0


answer = input("what does cpu stands for? ")
if answer.lower() == "central processing unit":
    print('correct !')
    score += 1
else:
    print('incorrect!')
 

answer = input("full meaning of TCP ? ")
if answer.lower() == "transmission control protocol":
    print('correct !')
    score += 1
else:
    print('incorrect!')
 

answer = input("full meaning of UDP? ")
if answer.lower() == "user diagram protocol":
    print('correct !')
    score += 1
else:
    print('incorrect!')
 

answer = input("full meaning of HTTPS ? ")
if answer.lower() == "hyper text transfer protocol":
    print('correct !')
    score += 1
else:
    print('incorrect!')



print("you got " + str(score) +  "questions correct")
print("you got " + str((score / 4 * 100)) +  "%. score ")
 

